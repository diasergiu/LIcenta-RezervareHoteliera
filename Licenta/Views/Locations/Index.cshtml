@model IEnumerable<Licenta.Entityes.Location>

@{
    ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<h2>Index</h2>

<p>
    <a asp-action="CreateLocation">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NrStreat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StreatName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NrStreat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="EditLocation" asp-route-id="@item.IdLocation">Edit</a> |
                <a asp-action="DetailsLocation" asp-route-id="@item.IdLocation">Details</a> |
                <a asp-action="DeleteLocation" asp-route-id="@item.IdLocation">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
