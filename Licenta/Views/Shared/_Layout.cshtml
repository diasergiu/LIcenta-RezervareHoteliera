@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "_Layout";
}

<head>
		<environment names="Development">
			<link type="text/css" href="@Url.Content("~/bootstrap-4.1.1-dist/css/bootstrap.css")" rel="stylesheet" />
			<link type="text/css" href="@Url.Content("~/bootstrap-4.1.1-dist/css/bootstrap-grid.css")" rel="stylesheet" />
			<link type="text/css" href="@Url.Content("~/bootstrap-4.1.1-dist/css/bootstrap-reboot.css")" rel="stylesheet" />
			
			<script src="@Url.Content("~/bootstrap-4.1.1-dist/js/bootstrap.js")"></script>
		</environment>
</head>
<body>
<div>
<div class="navbar navbar-nav">
    @if (Context.Session.GetString("IdCustomer") != null)
    {
        <ul>
            <li><a asp-area="" asp-controller="Customers" asp-action="LogOut">logOut</a></li>
        </ul>
    }
    else
    {
        <ul>
            <li><a asp-area="" asp-controller="Customers" asp-action="LogIn">LogIn</a></li>
            <li><a asp-area="" asp-controller="Customers" asp-action="Create">Sing In</a></li>
        </ul>
    }
</div>
	@RenderBody()
</div>
</body>


