@model Licenta.Entityes.CreditCard

@{
    ViewData["Title"] = "AddCreditCard";
		Layout = "_Layout";
}

<h2>AddCreditCard</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCreditCard" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>		
			<div class="form-group">
                <h3>First Name</h3>
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Last Name</h3>
                <label asp-for="CardExpireDate" class="control-label"></label>
                <input asp-for="CardExpireDate" class="form-control" />
                <span asp-validation-for="CardExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Username</h3>
                <label asp-for="Cvc" class="control-label"></label>
                <input asp-for="Cvc" class="form-control" />
                <span asp-validation-for="Cvc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Password</h3>
                <label asp-for="MoneyInTheCard" class="control-label"></label>
                <input asp-for="MoneyInTheCard" class="form-control" />
                <span asp-validation-for="MoneyInTheCard" class="text-danger"></span>
            </div>          
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>